<div class="d-flex flex-column align-items-center text-center">
  <div class="col-12 image mt-3 mb-5">
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
      alt="URL-shortener-icon" class="card-img-top" style='max-width: 25rem;' />
  </div>
  <div>
    <form method="POST" action="/">
      <input name="originalURL" class="form-control" type="url" style="min-width: 20rem;"
        placeholder="Input URL here..." value="{{newURL}}">
      <button class="btn btn-secondary mt-2 mb-3">Shorten URL</button>
    </form>
    {{#if newURL}}
    <div class="url-shortened mb-5 pl-1" style="background-color:azure; width:max-content">
      <a href="{{newURL}}" id="short-url">http://localhost:3000/{{shortenURL}}</a>
      <button class="btn btn-info ml-2" type="submit" onclick="copy()">Copy</button>
    </div>
    {{/if}}
    {{#if emptyURL}}
    <div class="alert alert-danger text-center">請輸入網址</div>
    {{/if}}
  </div>
</div>
<script>
  function copy() {
    const copyText = document.querySelector('#short-url').textContent
    navigator.clipboard.writeText(copyText)
    alert('Copied the url: ' + '\n' + copyText)
  }
</script>